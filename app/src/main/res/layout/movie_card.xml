<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="270dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView

        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:elevation="3dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="5dp"

        >

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

     <ImageView
         android:id="@+id/moviethumb"
         android:layout_width="350dp"
         android:layout_height="200dp"
         android:scaleType="fitXY"
         android:clickable="true"
         android:background="?attr/selectableItemBackgroundBorderless"
         />

       <ImageView
           android:id="@+id/stars"
           android:layout_width="35dp"
           android:layout_height="32dp"
           android:layout_alignBottom="@+id/moviethumb"
           app:srcCompat="@android:drawable/btn_star_big_on"
           android:layout_alignParentRight="true"
           android:paddingBottom="5dp"
           />

       <TextView

           android:id="@+id/rating"
           android:layout_width="30dp"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/moviethumb"
           android:paddingBottom="5dp"
           android:layout_toStartOf="@+id/stars"
           android:gravity="right"
           android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
           android:textColor="#FFFFFF"
           android:layout_toLeftOf="@+id/stars" />



       <TextView

           android:id="@+id/movietitle"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/moviethumb"
           android:paddingLeft="8dp"
           android:paddingRight="10dp"
           android:paddingTop="8dp"
           android:textColor="#000000"
           android:textSize="20dp"
           android:fontFamily="cursive"
           android:textStyle="bold"
           />

       <ImageButton
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:src="@mipmap/ic_star_border_black_36dp"
           android:layout_alignParentBottom="true"
           android:layout_alignParentEnd="true"
           android:layout_marginBottom="11dp"
           android:layout_marginEnd="13dp"
           android:scaleType="centerCrop"
           android:id="@+id/favadder"
           android:background="?attr/selectableItemBackgroundBorderless"

           />




   </RelativeLayout>

    </android.support.v7.widget.CardView>




</LinearLayout>